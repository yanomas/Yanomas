<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText
        android:hint="Nick:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNicknameEP"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Titulo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTituloEP"
        android:layout_below="@+id/etNicknameEP"
        android:layout_marginTop="68dp"

        android:layout_alignRight="@+id/etNicknameEP"
        android:layout_alignEnd="@+id/etNicknameEP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Comentario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:maxLength="500"
        android:id="@+id/etContenidoEP"
        android:layout_below="@+id/etTituloEP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etTituloEP"
        android:layout_alignEnd="@+id/etTituloEP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SeleccionÃ© un Avatar"
        android:id="@+id/textView2"
        android:layout_below="@+id/etContenidoEP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <ImageButton
        android:background="@drawable/avatar_uno"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton1"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2" />

    <ImageButton
        android:background="@drawable/avatar_dos"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toLeftOf="@+id/imageButton3"
        android:layout_toStartOf="@+id/imageButton3" />

    <ImageButton
        android:background="@drawable/avatar_tres"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/imageButton4"
        android:layout_toStartOf="@+id/imageButton4"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:background="@drawable/avatar_cuatro"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:background="#2196F3"
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/bPublicar"
        android:layout_below="@+id/imageButton2"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/imageButton4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>
